<SettingsScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#111111")
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#111111")
            Rectangle:
                size: self.size
                pos: self.pos

        Button:
            text: "Back"
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#111111") if self.state == 'normal' else utils.get_color_from_hex("#333333")
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}
            markup: True
            on_release:
                app.change_screen("home_screen", "WeParty", direction = 'left', mode='pop')




